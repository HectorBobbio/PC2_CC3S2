<h1>New movie</h1>

<%= form_with(model: @movie) do |form| %>
  <div>
    <%= form.label :title%>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<%end%>
